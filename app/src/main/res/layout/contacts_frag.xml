<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:textColor="#3b83bd"
        android:text="SendMe"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/buttonProfile"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/outline_account_circle_black_24dp"
        app:tint="@color/black" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lstContacts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0"
        tools:listitem="@layout/contact_item" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:rippleColor="@color/white"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        app:collapsedSize= "60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:iconTint = "@color/white"
        android:visibility="visible"
        app:iconSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:icon = "@drawable/outline_question_answer_black_24dp" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:rippleColor="@color/white"
        android:layout_gravity="bottom|end"
        app:backgroundTint="#d26966"
        android:visibility="gone"
        android:layout_margin="20dp"
        app:collapsedSize= "60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:iconTint = "@color/white"
        app:iconSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:icon = "@drawable/outline_delete_black_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>